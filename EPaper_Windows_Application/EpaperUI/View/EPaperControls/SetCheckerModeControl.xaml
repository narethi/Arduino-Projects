<local:PropertyPanelControl x:Class="EpaperUI.View.EPaperControls.SetCheckerModeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EpaperUI.View.EPaperControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="10,10,10,0">
            <RadioButton Content="1x1" IsChecked="True"/>
            <RadioButton Content="2x2" />
            <RadioButton Content="4x4" />
            <RadioButton Content="5x5" />
            <RadioButton Content="8x8" />
            <RadioButton Content="10x10" />
            <RadioButton Content="20x20" />
            <RadioButton Content="25x25" />
            <RadioButton Content="50x50" />
            <RadioButton Content="100x100" />
        </StackPanel>
        <Button Margin="10,10,10,10" Content="SetMode" Click="Button_Click" Grid.Row="1" />
    </Grid>
</local:PropertyPanelControl>
