<local:PropertyPanelControl x:Class="EpaperUI.View.EPaperControls.SetTextModeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EpaperUI.View.EPaperControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Content="Text to Print: " Grid.Column="0"/>
            <TextBox Grid.Column="1" Text="{Binding TextToWrite}" VerticalContentAlignment="Center"/>
        </Grid>
        <Button Margin="10,10,10,10" Content="SetMode" Click="Button_Click" Grid.Row="1" />
    </Grid>
</local:PropertyPanelControl>
